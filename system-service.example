[Unit]
Description=AstroCarto
After=network.target

[Service]
User=deploy
WorkingDirectory=/home/deploy/astrocarto/backend
ExecStart=/usr/bin/gunicorn -w 2 -b 127.0.0.1:5050 app:app
Restart=always

[Install]
WantedBy=multi-user.target

